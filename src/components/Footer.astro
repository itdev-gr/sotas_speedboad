<style>
	.site-footer {
		background: #064250;
		color: #fff;
		width: 100%;
	}
	.footer-main {
		display: grid;
		grid-template-columns: 1.2fr 1fr 1.2fr 1fr;
		gap: 2rem 3rem;
		max-width: 1200px;
		margin: 0 auto;
		padding: 3rem 2rem 4rem;
	}
	.footer-col {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 1rem;
	}
	.footer-logo {
		display: flex;
		flex-direction: column;
		gap: 0.15rem;
		margin-bottom: 0.25rem;
		text-decoration: none;
		color: inherit;
	}
	.footer-logo-letter {
		font-family: 'Cormorant Garamond', serif;
		font-size: 2rem;
		font-weight: 600;
		line-height: 1;
		color: #fff;
	}
	.footer-logo-text {
		font-size: 0.7rem;
		letter-spacing: 0.2em;
		color: #fff;
		opacity: 0.95;
	}
	.footer-title {
		font-size: 1rem;
		font-weight: 700;
		margin: 0;
		color: #fff;
		letter-spacing: 0.02em;
	}
	.footer-links {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}
	.footer-links a {
		color: #fff;
		text-decoration: none;
		font-size: 0.9rem;
		opacity: 0.9;
	}
	.footer-links a:hover {
		opacity: 1;
		text-decoration: underline;
	}
	.footer-company,
	.footer-address,
	.footer-contact {
		margin: 0;
		font-size: 0.9rem;
		line-height: 1.5;
		color: #fff;
		opacity: 0.95;
	}
	.footer-contact a {
		color: #fff;
		text-decoration: none;
	}
	.footer-contact a:hover {
		text-decoration: underline;
	}
	.footer-form-link {
		color: #fff;
		text-decoration: none;
		font-size: 0.9rem;
	}
	.footer-form-link:hover {
		text-decoration: underline;
	}
	.footer-social {
		display: flex;
		gap: 0.75rem;
		margin-top: 0.25rem;
	}
	.footer-social a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: #fff;
		color: #064250;
		transition: opacity 0.2s;
	}
	.footer-social a:hover {
		opacity: 0.9;
	}
	.footer-bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.15);
		padding: 1rem 2rem;
	}
	.footer-copyright {
		margin: 0;
		font-size: 0.8rem;
		color: rgba(255, 255, 255, 0.75);
		text-align: center;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
	}
	.footer-copyright a {
		color: rgba(255, 255, 255, 0.85);
		text-decoration: none;
	}
	.footer-copyright a:hover {
		text-decoration: underline;
	}
	@media (max-width: 900px) {
		.footer-main {
			grid-template-columns: 1fr 1fr;
			padding: 2rem 1.5rem 3rem;
		}
	}
	@media (max-width: 600px) {
		.footer-main {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		.footer-copyright {
			font-size: 0.75rem;
		}
	}
</style>
