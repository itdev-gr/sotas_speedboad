---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="el">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Contact Us | Sotas Speedboats â€“ Zakynthos</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
	</head>
	<body class="contact-page-body min-h-screen font-sans antialiased overflow-x-hidden" style="font-family: 'Inter', system-ui, sans-serif;">
		<Header />
		<main class="min-h-[80vh] grid grid-cols-1 lg:grid-cols-2 pt-20" aria-label="Contact form and details">
			<!-- Left: dark form -->
			<section class="bg-[#0A1929] flex flex-col justify-center px-8 py-12 lg:px-12 lg:py-16">
				<h1 class="text-2xl lg:text-3xl font-bold text-white mb-3">Send us a message</h1>
				<p class="text-gray-400 text-sm lg:text-base mb-8 max-w-lg">
					For any question or info about our services, please fill out the form below and we'll get back to you as soon as possible.
				</p>
				<form id="contact-form" action="#" method="post" class="flex flex-col gap-6 max-w-lg">
					<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
						<div class="flex flex-col gap-2">
							<label for="contact-firstname" class="text-white text-sm font-medium">First Name *</label>
							<input type="text" id="contact-firstname" name="firstname" required placeholder="First name" class="bg-transparent border-0 border-b border-white/80 text-white placeholder-gray-400 py-2 focus:outline-none focus:border-white" />
						</div>
						<div class="flex flex-col gap-2">
							<label for="contact-lastname" class="text-white text-sm font-medium">Last Name *</label>
							<input type="text" id="contact-lastname" name="lastname" required placeholder="Last name" class="bg-transparent border-0 border-b border-white/80 text-white placeholder-gray-400 py-2 focus:outline-none focus:border-white" />
						</div>
					</div>
					<div class="flex flex-col gap-2">
						<label for="contact-phone" class="text-white text-sm font-medium">Phone Number</label>
						<div class="flex border-0 border-b border-white/80 focus-within:border-white">
							<div class="flex items-center gap-1 pr-2 text-white text-sm shrink-0">
								<span class="text-base">ðŸ‡¬ðŸ‡·</span>
								<select name="country" class="bg-transparent text-white border-0 py-2 focus:outline-none focus:ring-0 cursor-pointer" aria-label="Country code">
									<option value="+30">+30</option>
								</select>
							</div>
							<input type="tel" id="contact-phone" name="phone" placeholder="698 123 4567" class="flex-1 bg-transparent border-0 text-white placeholder-gray-400 py-2 focus:outline-none" />
						</div>
					</div>
					<div class="flex flex-col gap-2">
						<label for="contact-email" class="text-white text-sm font-medium">Email *</label>
						<input type="email" id="contact-email" name="email" required placeholder="your@email.com" class="bg-transparent border-0 border-b border-white/80 text-white placeholder-gray-400 py-2 focus:outline-none focus:border-white" />
					</div>
					<div class="flex flex-col gap-2">
						<label for="contact-message" class="text-white text-sm font-medium">Write a message *</label>
						<textarea id="contact-message" name="message" rows="4" required placeholder="Your message..." class="bg-transparent border-0 border-b border-white/80 text-white placeholder-gray-400 py-2 focus:outline-none focus:border-white resize-y min-h-[100px]"></textarea>
					</div>
					<button type="submit" class="mt-2 px-8 py-3 rounded-lg bg-linear-to-r from-cyan-500 to-teal-500 text-white font-semibold text-sm uppercase tracking-wide hover:opacity-95 transition-opacity w-fit">
						Send Message
					</button>
				</form>
			</section>

			<!-- Right: light contact info -->
			<section class="bg-white flex flex-col justify-center px-8 py-12 lg:px-12 lg:py-16">
				<p class="text-[#3CCFDB] text-xs font-semibold uppercase tracking-wider mb-2">Contact Us</p>
				<h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4">Get In Touch</h2>
				<p class="text-gray-600 text-sm lg:text-base mb-8 max-w-md">
					Do not hesitate to contact us for any info you might need. Our team is available every day on the phone from 9:00 am to 9:00 PM (GMT+2). Let's plan the perfect day at sea for you and your loved ones!
				</p>

				<div class="space-y-6 mb-10">
					<div class="flex gap-4">
						<div class="shrink-0 w-10 h-10 rounded-full border-2 border-[#3CCFDB] flex items-center justify-center text-[#3CCFDB]">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" /></svg>
						</div>
						<div>
							<p class="font-semibold text-gray-900 text-sm">Office Address</p>
							<p class="text-gray-600 text-sm">Zakynthos, Ionian Sea, Greece</p>
						</div>
					</div>
					<div class="flex gap-4">
						<div class="shrink-0 w-10 h-10 rounded-full border-2 border-[#3CCFDB] flex items-center justify-center text-[#3CCFDB]">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3a2 2 0 0 1 2 2c0 .5-.2 1.2-.5 1.8L12 12v6m0 0h-2m2 0h2M10 8h4M8 8v10m8-10v10" /></svg>
						</div>
						<div>
							<p class="font-semibold text-gray-900 text-sm">Boat Pickup Location</p>
							<p class="text-gray-600 text-sm">Zakynthos Marina, Greece</p>
						</div>
					</div>
					<div class="flex gap-4">
						<div class="shrink-0 w-10 h-10 rounded-full border-2 border-[#3CCFDB] flex items-center justify-center text-[#3CCFDB]">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" /></svg>
						</div>
						<div>
							<p class="font-semibold text-gray-900 text-sm">Call Us</p>
							<a href="tel:+306970621594" class="text-gray-600 text-sm hover:text-[#3CCFDB]">(+30) 697 062 1594</a>
						</div>
					</div>
					<div class="flex gap-4">
						<div class="shrink-0 w-10 h-10 rounded-full border-2 border-[#3CCFDB] flex items-center justify-center text-[#3CCFDB]">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" /></svg>
						</div>
						<div>
							<p class="font-semibold text-gray-900 text-sm">Email Us</p>
							<a href="mailto:info@boatrentalzakynthos.com" class="text-gray-600 text-sm hover:text-[#3CCFDB]">info@boatrentalzakynthos.com</a>
						</div>
					</div>
				</div>

				<div>
					<p class="font-bold text-gray-900 text-sm mb-4">Follow Us</p>
					<div class="flex flex-wrap gap-3">
