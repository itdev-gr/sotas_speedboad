---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="el">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>License Free Rent | Sotas Speedboats – Zakynthos</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
	</head>
	<body class="license-free-body">
		<Header />
		<main class="license-free-page">
			<section class="page-hero" aria-label="License Free Rent">
				<div class="page-hero-overlay"></div>
				<div class="page-hero-content">
					<p class="page-hero-label">NO LICENSE REQUIRED</p>
					<h1 class="page-hero-title">License Free Rent</h1>
					<p class="page-hero-subtitle">Drive yourself in Zakynthos. No boat license needed – just enjoy the sea.</p>
					<a href="/contact" class="page-hero-cta">CONTACT US TO BOOK</a>
				</div>
			</section>

			<section class="license-content-section" aria-label="Self drive boat rentals">
				<div class="license-content-inner">
					<div class="license-text">
						<p class="license-sub">NO LICENSE REQUIRED</p>
						<h2 class="license-title">SELF DRIVE BOAT RENTALS</h2>
						<p class="license-desc">
							Rent a self drive boat in Zakynthos and become a captain yourself. No license required! Our boats are easy to handle and perfect for exploring the coast, hidden bays, and crystal-clear waters of the Ionian Sea.
						</p>
						<p class="license-desc">
							We provide a brief safety and handling briefing before you set off. Choose from our fleet of well-maintained boats and enjoy the freedom of the sea at your own pace.
						</p>
						<a href="tel:+306970621594" class="license-cta">CALL TO BOOK: +30 697 062 1594</a>
					</div>
				</div>
			</section>

			<section class="speedboat-choose" aria-label="Choose your speedboat">
				<h2 class="speedboat-choose-title">Choose Your Speedboat</h2>
				<div class="speedboat-cards">
					<div class="speedboat-card">
						<div class="speedboat-card-image">
							<img src="/images/self-drive-boat.png" alt="Boat 1" width="400" height="280" />
						</div>
						<div class="speedboat-card-content">
							<p class="speedboat-card-name">Boat 1</p>
							<p class="speedboat-rental">- 4h Rental €180*</p>
							<p class="speedboat-rental">- 7h Rental €250*</p>
							<p class="speedboat-pax">Max. 6 pax</p>
							<div class="speedboat-buttons">
								<a href="/contact" class="speedboat-btn speedboat-btn-primary">Book Here</a>
								<a href="#includes" class="speedboat-btn speedboat-btn-secondary">Includes &gt;</a>
							</div>
						</div>
					</div>
					<div class="speedboat-card">
						<div class="speedboat-card-image">
							<img src="/images/fleet-experience.png" alt="Boat 2" width="400" height="280" />
						</div>
						<div class="speedboat-card-content">
							<p class="speedboat-card-name">Boat 2</p>
							<p class="speedboat-rental">- 4h Rental €200*</p>
							<p class="speedboat-rental">- 7h Rental €270*</p>
							<p class="speedboat-pax">Max. 7 pax</p>
							<div class="speedboat-buttons">
								<a href="/contact" class="speedboat-btn speedboat-btn-primary">Book Here</a>
								<a href="#includes" class="speedboat-btn speedboat-btn-secondary">Includes &gt;</a>
							</div>
						</div>
					</div>
					<div class="speedboat-card">
						<div class="speedboat-card-image">
							<img src="/images/skipper-drive.png" alt="Boat 3" width="400" height="280" />
						</div>
						<div class="speedboat-card-content">
							<p class="speedboat-card-name">Boat 3</p>
							<p class="speedboat-rental">- 4h Rental €200*</p>
							<p class="speedboat-rental">- 7h Rental €270*</p>
							<p class="speedboat-pax">Max. 7 pax</p>
							<div class="speedboat-buttons">
								<a href="/contact" class="speedboat-btn speedboat-btn-primary">Book Here</a>
								<a href="#includes" class="speedboat-btn speedboat-btn-secondary">Includes &gt;</a>
							</div>
						</div>
					</div>
				</div>
			</section>
		</main>
		<Footer />

		<script is:inline>
			document.addEventListener('DOMContentLoaded', () => {
				const header = document.querySelector('.hero-header');
				const heroSection = document.querySelector('.hero');
				if (header) {
					if (!heroSection) {
						header.classList.add('hero-header--scrolled');
					} else {
						const onScroll = () => {
							const heroH = heroSection.getBoundingClientRect().height;
							header.classList.toggle('hero-header--scrolled', window.scrollY >= heroH - 1);
						};
						onScroll();
						window.addEventListener('scroll', onScroll, { passive: true });
					}
				}
			});
		</script>
	</body>
</html>

<style is:global>
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	html {
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		font-family: 'Inter', system-ui, sans-serif;
		overflow-x: hidden;
	}
	body.license-free-body {
		padding-top: 0;
	}
</style>

<style>
	.license-free-page {
		min-height: 100vh;
	}

	.page-hero {
		position: relative;
		width: 100%;
		min-height: 50vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, #064250 0%, #0a5a6a 100%);
		overflow: hidden;
		padding-top: 5rem;
	}
	.page-hero-overlay {
		position: absolute;
		inset: 0;
		background: url('/images/self-drive-boat.png') center/cover no-repeat;
		opacity: 0.25;
	}
	.page-hero-content {
		position: relative;
		z-index: 1;
		text-align: center;
		padding: 3rem 2rem;
		max-width: 36rem;
	}
	.page-hero-label {
		font-size: 0.75rem;
		letter-spacing: 0.2em;
		color: rgba(255, 255, 255, 0.9);
		margin: 0 0 0.5rem 0;
		text-transform: uppercase;
	}
	.page-hero-title {
		font-family: 'Cormorant Garamond', serif;
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		font-weight: 600;
		color: #fff;
		margin: 0 0 1rem 0;
		line-height: 1.2;
	}
	.page-hero-subtitle {
		font-size: 1.1rem;
		color: rgba(255, 255, 255, 0.9);
		margin: 0 0 1.5rem 0;
		line-height: 1.5;
	}
	.page-hero-cta {
		display: inline-block;
		padding: 0.9rem 2rem;
		background: #fff;
		color: #064250;
		text-decoration: none;
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		border-radius: 4px;
		transition: opacity 0.2s, transform 0.2s;
	}
	.page-hero-cta:hover {
		opacity: 0.95;
		transform: translateY(-1px);
	}

	.license-content-section {
		width: 100%;
	}
	.license-content-inner {
		width: 100%;
		margin: 0;
	}
	.license-text {
		background: #f5f0e8;
		padding: 4rem 3rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 1.25rem;
		text-align: center;
		width: 100%;
		box-sizing: border-box;
	}
	.license-sub {
		font-size: 0.75rem;
		font-weight: 600;
		letter-spacing: 0.2em;
		color: #1a1a1a;
		margin: 0;
		text-transform: uppercase;
	}
	.license-title {
		font-family: 'Cormorant Garamond', serif;
		font-size: clamp(1.75rem, 3.5vw, 2.5rem);
		font-weight: 700;
		color: #1a1a1a;
		margin: 0;
		line-height: 1.2;
	}
	.license-desc {
		font-size: 1rem;
		line-height: 1.6;
		color: #333;
		margin: 0;
		max-width: 42ch;
		margin-left: auto;
		margin-right: auto;
	}
	.license-cta {
		display: inline-block;
		padding: 0.9rem 2rem;
		background: #1a1a1a;
		color: #fff;
		font-size: 0.9rem;
		font-weight: 600;
		text-decoration: none;
		transition: background 0.2s;
		margin-top: 0.5rem;
	}
	.license-cta:hover {
		background: #333;
	}

	/* Choose Your Speedboat section */
	.speedboat-choose {
		max-width: 1200px;
		margin: 0 auto;
		padding: 4rem 2rem;
	}
	.speedboat-choose-title {
		font-family: 'Cormorant Garamond', serif;
		font-size: clamp(1.75rem, 3.5vw, 2.5rem);
		font-weight: 600;
		color: #5C5C5C;
		text-align: center;
		margin: 0 0 2.5rem 0;
		line-height: 1.2;
	}
	.speedboat-cards {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1.5rem;
	}
	.speedboat-card {
		display: flex;
		flex-direction: column;
	}
	.speedboat-card-image {
		width: 100%;
		height: 220px;
		overflow: hidden;
		border-radius: 12px 12px 0 0;
	}
	.speedboat-card-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}
	.speedboat-card-content {
		background: #E0DCD7;
		padding: 1.25rem 1.5rem;
		border-radius: 12px 12px 0 0;
		margin-top: -1rem;
		position: relative;
		z-index: 1;
	}
	.speedboat-card-name {
		font-weight: 700;
		font-size: 1.1rem;
		color: #1a1a1a;
		margin: 0 0 0.5rem 0;
	}
	.speedboat-rental,
	.speedboat-pax {
		font-size: 0.95rem;
		color: #333;
		margin: 0 0 0.25rem 0;
		line-height: 1.4;
	}
	.speedboat-pax {
		margin-bottom: 1rem;
	}
	.speedboat-buttons {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}
	.speedboat-btn {
		display: inline-block;
		padding: 0.6rem 1.25rem;
		font-size: 0.9rem;
		font-weight: 500;
		text-decoration: none;
		border-radius: 6px;
		transition: background 0.2s, border-color 0.2s, color 0.2s;
		border: 1px solid #c4beb5;
	}
	.speedboat-btn-primary {
		background: #fff;
		color: #1a1a1a;
	}
	.speedboat-btn-primary:hover {
		background: #f5f0e8;
		border-color: #a89f94;
	}
	.speedboat-btn-secondary {
		background: transparent;
		color: #333;
	}
	.speedboat-btn-secondary:hover {
		background: rgba(255, 255, 255, 0.5);
		border-color: #a89f94;
	}

	@media (max-width: 900px) {
		.license-text {
			padding: 3rem 1.5rem;
		}
		.speedboat-cards {
			grid-template-columns: 1fr;
		}
		.speedboat-choose {
			padding: 3rem 1.5rem;
		}
	}
</style>
