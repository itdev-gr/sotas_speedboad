---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="el">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>License Free Rent | Sotas Speedboats – Zakynthos</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
	</head>
	<body class="license-free-body">
		<Header />
		<main class="license-free-page">
			<section class="page-hero" aria-label="License Free Rent">
				<div class="page-hero-overlay"></div>
				<div class="page-hero-content">
					<p class="page-hero-label">NO LICENSE REQUIRED</p>
					<h1 class="page-hero-title">License Free Rent</h1>
					<p class="page-hero-subtitle">Drive yourself in Zakynthos. No boat license needed – just enjoy the sea.</p>
					<a href="/contact" class="page-hero-cta">CONTACT US TO BOOK</a>
				</div>
			</section>

			<section class="license-content-section" aria-label="Self drive boat rentals">
				<div class="license-content-inner">
					<div class="license-text">
						<p class="license-sub">NO LICENSE REQUIRED</p>
						<h2 class="license-title">SELF DRIVE BOAT RENTALS</h2>
						<p class="license-desc">
							Rent a self drive boat in Zakynthos and become a captain yourself. No license required! Our boats are easy to handle and perfect for exploring the coast, hidden bays, and crystal-clear waters of the Ionian Sea.
						</p>
						<p class="license-desc">
							We provide a brief safety and handling briefing before you set off. Choose from our fleet of well-maintained boats and enjoy the freedom of the sea at your own pace.
						</p>
						<a href="tel:+306970621594" class="license-cta">CALL TO BOOK: +30 697 062 1594</a>
					</div>
				</div>
			</section>

			<section class="speedboat-choose" aria-label="Choose your speedboat">
				<h2 class="speedboat-choose-title">Choose Your Speedboat</h2>
				<div class="speedboat-cards">
					<div class="speedboat-card">
						<div class="speedboat-card-image">
							<img src="/images/self-drive-boat.png" alt="Boat 1" width="400" height="280" />
						</div>
						<div class="speedboat-card-content">
							<p class="speedboat-card-name">Boat 1</p>
							<p class="speedboat-rental">- 4h Rental €180*</p>
							<p class="speedboat-rental">- 7h Rental €250*</p>
							<p class="speedboat-pax">Max. 6 pax</p>
							<div class="speedboat-buttons">
								<a href="/contact" class="speedboat-btn speedboat-btn-primary">Book Here</a>
								<button type="button" class="speedboat-btn speedboat-btn-secondary includes-trigger" data-boat="1" aria-label="View includes for Boat 1">Includes &gt;</button>
							</div>
						</div>
					</div>
					<div class="speedboat-card">
						<div class="speedboat-card-image">
							<img src="/images/fleet-experience.png" alt="Boat 2" width="400" height="280" />
						</div>
						<div class="speedboat-card-content">
							<p class="speedboat-card-name">Boat 2</p>
							<p class="speedboat-rental">- 4h Rental €200*</p>
							<p class="speedboat-rental">- 7h Rental €270*</p>
							<p class="speedboat-pax">Max. 7 pax</p>
							<div class="speedboat-buttons">
								<a href="/contact" class="speedboat-btn speedboat-btn-primary">Book Here</a>
								<button type="button" class="speedboat-btn speedboat-btn-secondary includes-trigger" data-boat="2" aria-label="View includes for Boat 2">Includes &gt;</button>
							</div>
						</div>
					</div>
					<div class="speedboat-card">
						<div class="speedboat-card-image">
							<img src="/images/skipper-drive.png" alt="Boat 3" width="400" height="280" />
						</div>
						<div class="speedboat-card-content">
							<p class="speedboat-card-name">Boat 3</p>
							<p class="speedboat-rental">- 4h Rental €200*</p>
							<p class="speedboat-rental">- 7h Rental €270*</p>
							<p class="speedboat-pax">Max. 7 pax</p>
							<div class="speedboat-buttons">
								<a href="/contact" class="speedboat-btn speedboat-btn-primary">Book Here</a>
								<button type="button" class="speedboat-btn speedboat-btn-secondary includes-trigger" data-boat="3" aria-label="View includes for Boat 3">Includes &gt;</button>
							</div>
						</div>
					</div>
				</div>
			</section>
		</main>
		<Footer />

		<!-- Includes modal for Boat 1 -->
		<div id="includes-modal" class="includes-modal" role="dialog" aria-modal="true" aria-labelledby="includes-modal-title" aria-hidden="true">
			<div class="includes-modal-backdrop"></div>
			<div class="includes-modal-box">
				<button type="button" class="includes-modal-close" aria-label="Close">&times;</button>
				<div class="includes-modal-inner">
					<div class="includes-modal-image">
						<img src="/images/self-drive-boat.png" alt="Boat 1 - Daphne" width="400" height="280" />
					</div>
					<div class="includes-modal-content">
						<h3 id="includes-modal-title" class="includes-modal-title">
							<span>Speedboat</span>
							<span class="includes-modal-boat-name">"Daphne"</span>
						</h3>
						<p class="includes-modal-heading">Includes:</p>
						<ul class="includes-modal-list">
							<li>Meet at the Port</li>
							<li>Coolbox with Ice</li>
							<li>Bluetooth Speaker Onboard</li>
							<li>Sun Canopy</li>
							<li>Sunbathing Area</li>
							<li>GPS Tracking</li>
							<li>60 HP Engine + Backup Engine</li>
							<li>5 Meters</li>
							<li>All Required Safety Equipment</li>
							<li class="includes-modal-excluded">Fuel not included</li>
						</ul>
						<p class="includes-modal-pax">Max. 6 passengers</p>
						<a href="/contact" class="includes-modal-cta">Book Here</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Includes modal for Boat 2 (Elena) -->
		<div id="includes-modal-2" class="includes-modal" role="dialog" aria-modal="true" aria-labelledby="includes-modal-2-title" aria-hidden="true">
			<div class="includes-modal-backdrop" data-modal-close="2"></div>
			<div class="includes-modal-box">
				<button type="button" class="includes-modal-close" data-modal-close="2" aria-label="Close">&times;</button>
				<div class="includes-modal-inner">
					<div class="includes-modal-carousel-wrap">
						<div class="includes-modal-carousel" data-carousel="2">
							<div class="includes-modal-carousel-track">
								<div class="includes-modal-carousel-slide"><img src="/images/fleet-experience.png" alt="Speedboat Elena" width="400" height="280" /></div>
								<div class="includes-modal-carousel-slide"><img src="/images/fleet-experience.png" alt="Speedboat Elena interior" width="400" height="280" /></div>
								<div class="includes-modal-carousel-slide"><img src="/images/fleet-experience.png" alt="Speedboat Elena" width="400" height="280" /></div>
								<div class="includes-modal-carousel-slide"><img src="/images/fleet-experience.png" alt="Speedboat Elena" width="400" height="280" /></div>
								<div class="includes-modal-carousel-slide"><img src="/images/fleet-experience.png" alt="Speedboat Elena" width="400" height="280" /></div>
								<div class="includes-modal-carousel-slide"><img src="/images/fleet-experience.png" alt="Speedboat Elena" width="400" height="280" /></div>
							</div>
							<button type="button" class="includes-modal-carousel-prev" data-carousel="2" aria-label="Previous image">&larr;</button>
							<button type="button" class="includes-modal-carousel-next" data-carousel="2" aria-label="Next image">&rarr;</button>
							<span class="includes-modal-carousel-counter" data-carousel-counter="2">1/6</span>
						</div>
						<p class="includes-modal-carousel-title">Speedboat Elena</p>
					</div>
					<div class="includes-modal-content">
						<h3 id="includes-modal-2-title" class="includes-modal-title">
							Speedboat <span class="includes-modal-boat-name">'Elena'</span>
						</h3>
						<p class="includes-modal-heading">Includes:</p>
						<ul class="includes-modal-list">
							<li>Meet at the Port</li>
							<li>Coolbox with Ice</li>
							<li>Bluetooth Speaker Onboard</li>
							<li>Sun Canopy</li>
							<li>Sunbathing Area</li>
							<li>GPS Tracking</li>
							<li>60 HP Engine + Backup Engine</li>
							<li>5.4 Meters</li>
							<li>All Required Safety Equipment</li>
							<li class="includes-modal-excluded">Fuel not included</li>
						</ul>
						<p class="includes-modal-pax">Max. 7 passengers</p>
						<a href="/contact" class="includes-modal-cta">Book Here</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Includes modal for Boat 3 (Valeria) -->
		<div id="includes-modal-3" class="includes-modal" role="dialog" aria-modal="true" aria-labelledby="includes-modal-3-title" aria-hidden="true">
			<div class="includes-modal-backdrop" data-modal-close="3"></div>
			<div class="includes-modal-box">
				<button type="button" class="includes-modal-close" data-modal-close="3" aria-label="Close">&times;</button>
				<div class="includes-modal-inner">
					<div class="includes-modal-image">
						<img src="/images/skipper-drive.png" alt="Boat 3 - Valeria" width="400" height="280" />
					</div>
					<div class="includes-modal-content">
						<h3 id="includes-modal-3-title" class="includes-modal-title">
							<span>Speedboat</span>
							<span class="includes-modal-boat-name">"Valeria"</span>
						</h3>
						<p class="includes-modal-heading">Includes:</p>
						<ul class="includes-modal-list">
							<li>Meet at the Port</li>
							<li>Coolbox with Ice</li>
							<li>Bluetooth Speaker Onboard</li>
							<li>Sun Canopy</li>
							<li>Sunbathing Area</li>
							<li>GPS Tracking</li>
							<li>60 HP Engine + Backup Engine</li>
							<li>5.5 Meters</li>
							<li>All Required Safety Equipment</li>
							<li class="includes-modal-excluded">Fuel not included</li>
						</ul>
						<p class="includes-modal-pax">Max. 7 passengers</p>
						<a href="/contact" class="includes-modal-cta">Book Here</a>
					</div>
				</div>
			</div>
		</div>

		<script is:inline>
			document.addEventListener('DOMContentLoaded', () => {
				const header = document.querySelector('.hero-header');
				const heroSection = document.querySelector('.hero');
				if (header) {
					if (!heroSection) {
						header.classList.add('hero-header--scrolled');
					} else {
						const onScroll = () => {
							const heroH = heroSection.getBoundingClientRect().height;
							header.classList.toggle('hero-header--scrolled', window.scrollY >= heroH - 1);
						};
						onScroll();
						window.addEventListener('scroll', onScroll, { passive: true });
					}
				}

				// Includes modal Boat 1
				const modal = document.getElementById('includes-modal');
				const triggers1 = document.querySelectorAll('.includes-trigger[data-boat="1"]');
				const openModal1 = () => {
					if (modal) {
						modal.classList.add('includes-modal--open');
						modal.setAttribute('aria-hidden', 'false');
						document.body.style.overflow = 'hidden';
					}
				};
				const closeModal1 = () => {
					if (modal) {
						modal.classList.remove('includes-modal--open');
						modal.setAttribute('aria-hidden', 'true');
						document.body.style.overflow = '';
					}
				};
				triggers1.forEach((el) => el.addEventListener('click', (e) => { e.preventDefault(); openModal1(); }));
				modal?.querySelector('.includes-modal-close')?.addEventListener('click', closeModal1);
				modal?.querySelector('.includes-modal-backdrop')?.addEventListener('click', closeModal1);
				modal?.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeModal1(); });

				// Includes modal Boat 2 (Elena)
				const modal2 = document.getElementById('includes-modal-2');
				const triggers2 = document.querySelectorAll('.includes-trigger[data-boat="2"]');
				const openModal2 = () => {
					if (modal2) {
						modal2.classList.add('includes-modal--open');
						modal2.setAttribute('aria-hidden', 'false');
						document.body.style.overflow = 'hidden';
					}
				};
				const closeModal2 = () => {
					if (modal2) {
						modal2.classList.remove('includes-modal--open');
						modal2.setAttribute('aria-hidden', 'true');
						document.body.style.overflow = '';
					}
				};
				triggers2.forEach((el) => el.addEventListener('click', (e) => { e.preventDefault(); openModal2(); }));
				document.querySelectorAll('[data-modal-close="2"]').forEach((el) => el.addEventListener('click', closeModal2));
				modal2?.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeModal2(); });

				// Includes modal Boat 3 (Valeria)
				const modal3 = document.getElementById('includes-modal-3');
				const triggers3 = document.querySelectorAll('.includes-trigger[data-boat="3"]');
				const openModal3 = () => {
					if (modal3) {
						modal3.classList.add('includes-modal--open');
						modal3.setAttribute('aria-hidden', 'false');
						document.body.style.overflow = 'hidden';
					}
				};
				const closeModal3 = () => {
					if (modal3) {
						modal3.classList.remove('includes-modal--open');
						modal3.setAttribute('aria-hidden', 'true');
						document.body.style.overflow = '';
					}
				};
				triggers3.forEach((el) => el.addEventListener('click', (e) => { e.preventDefault(); openModal3(); }));
				document.querySelectorAll('[data-modal-close="3"]').forEach((el) => el.addEventListener('click', closeModal3));
				modal3?.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeModal3(); });

				// Carousel for modal 2
				const carousel = document.querySelector('[data-carousel="2"]');
				if (carousel) {
					const track = carousel.querySelector('.includes-modal-carousel-track');
					const slides = carousel.querySelectorAll('.includes-modal-carousel-slide');
					const total = slides.length;
					let index = 0;
					const counterEl = document.querySelector('[data-carousel-counter="2"]');
					const update = () => {
						if (track && total) {
							track.style.transform = 'translateX(-' + (index * 100) + '%)';
							if (counterEl) counterEl.textContent = (index + 1) + '/' + total;
						}
					};
					carousel.querySelector('.includes-modal-carousel-prev')?.addEventListener('click', () => {
						index = (index - 1 + total) % total;
						update();
					});
					carousel.querySelector('.includes-modal-carousel-next')?.addEventListener('click', () => {
						index = (index + 1) % total;
						update();
					});
					update();
				}
			});
		</script>
	</body>
</html>

<style is:global>
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	html {
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		font-family: 'Inter', system-ui, sans-serif;
		overflow-x: hidden;
	}
	body.license-free-body {
		padding-top: 0;
	}
</style>

<style>
	.license-free-page {
		min-height: 100vh;
	}

	.page-hero {
		position: relative;
		width: 100%;
		min-height: 50vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, #064250 0%, #0a5a6a 100%);
		overflow: hidden;
		padding-top: 5rem;
	}
	.page-hero-overlay {
		position: absolute;
		inset: 0;
		background: url('/images/self-drive-boat.png') center/cover no-repeat;
		opacity: 0.25;
	}
	.page-hero-content {
		position: relative;
		z-index: 1;
		text-align: center;
		padding: 3rem 2rem;
		max-width: 36rem;
	}
	.page-hero-label {
		font-size: 0.75rem;
		letter-spacing: 0.2em;
		color: rgba(255, 255, 255, 0.9);
		margin: 0 0 0.5rem 0;
		text-transform: uppercase;
	}
	.page-hero-title {
		font-family: 'Cormorant Garamond', serif;
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		font-weight: 600;
		color: #fff;
		margin: 0 0 1rem 0;
		line-height: 1.2;
	}
	.page-hero-subtitle {
		font-size: 1.1rem;
		color: rgba(255, 255, 255, 0.9);
		margin: 0 0 1.5rem 0;
		line-height: 1.5;
	}
	.page-hero-cta {
		display: inline-block;
		padding: 0.9rem 2rem;
		background: #fff;
		color: #064250;
		text-decoration: none;
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		border-radius: 4px;
		transition: opacity 0.2s, transform 0.2s;
	}
