			const heroContentSecond = document.querySelector('.hero-content-second');
			const prevBtn = document.querySelector('.hero-arrow-prev');
			const nextBtn = document.querySelector('.hero-arrow-next');

			if (video) {
				const sources = ['/videos/hero.mp4', '/videos/hero2.mp4'];
				let currentIndex = 0;
				let hideTriggeredForFirstVideo = false;
				const sourceEl = video.querySelector('source');

				const showVideo = () => video.classList.add('is-ready');
				video.addEventListener('canplay', showVideo, { once: true });
				video.addEventListener('playing', showVideo, { once: true });
				if (video.readyState >= 2) showVideo();

				function goToVideo(index) {
					currentIndex = (index + sources.length) % sources.length;
					sourceEl.setAttribute('src', sources[currentIndex]);
					video.load();
					video.play();
					if (currentIndex === 0) {
						hideTriggeredForFirstVideo = false;
						heroContent?.classList.remove('hero-content--hidden');
						heroContentSecond?.classList.remove('hero-content-second--visible');
					} else {
						heroContent?.classList.add('hero-content--hidden');
						heroContentSecond?.classList.add('hero-content-second--visible');
					}
				}

				video.addEventListener('timeupdate', () => {
					if (currentIndex !== 0 || hideTriggeredForFirstVideo) return;
					const duration = video.duration;
					if (!Number.isFinite(duration)) return;
					if (video.currentTime >= duration - 0.5) {
						hideTriggeredForFirstVideo = true;
						heroContent?.classList.add('hero-content--hidden');
					}
				});

				video.addEventListener('ended', () => goToVideo(currentIndex + 1));

				if (prevBtn) prevBtn.addEventListener('click', (e) => { e.preventDefault(); goToVideo(currentIndex - 1); });
				if (nextBtn) nextBtn.addEventListener('click', (e) => { e.preventDefault(); goToVideo(currentIndex + 1); });
			}

			// Header transparent until scroll past hero, then solid teal (handled by Header component + this script)
			const header = document.querySelector('.hero-header');
			const heroSection = document.querySelector('.hero');
			if (header && heroSection) {
				const onScroll = () => {
					const heroH = heroSection.getBoundingClientRect().height;
					header.classList.toggle('hero-header--scrolled', window.scrollY >= heroH - 1);
				};
				onScroll();
				window.addEventListener('scroll', onScroll, { passive: true });
			}
			});
		</script>
