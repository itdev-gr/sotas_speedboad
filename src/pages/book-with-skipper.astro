---
export const prerender = false;
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const boatId = Astro.url.searchParams.get('boat')?.trim() || null;
const base = Astro.url.origin;
type SkipperService = { name: string; durationHours: number; price: number; description?: string };
let boats: Array<{ id: string; name: string; imageUrl: string; imageUrls: string[]; price4h: number; price7h: number; skipperPrice4h: number; skipperPrice7h: number; skipperServices: SkipperService[]; maxPax: number; modalName: string; includes: string[]; lengthMeters: string; fuelExcludedText: string; sortOrder: number; description?: string }> = [];
try {
	const res = await fetch(`${base}/api/boats`, { cache: 'no-store' });
	boats = res.ok ? await res.json() : [];
} catch {
	boats = [];
}
const boat = boatId ? boats.find((b) => b.id === boatId) : null;
if (boat && !Array.isArray(boat.skipperServices)) (boat as { skipperServices: SkipperService[] }).skipperServices = [];
---

<html lang="el">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{boat ? `${boat.name} – Book with Skipper | Sotas Speedboats` : 'Book with Skipper | Sotas Speedboats – Zakynthos'}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
	</head>
	<body class="book-with-skipper-body">
		<Header />
		<main class="book-with-skipper-page">
			{!boat ? (
				<section class="book-page-section" aria-label="Boat not found">
					<div class="book-page-inner">
						<h1 class="book-page-title">Boat not found</h1>
						<p class="book-page-text">The boat you selected could not be found or is no longer available.</p>
						<a href="/rent-with-skipper" class="book-page-cta">Back to Rent with Skipper</a>
					</div>
				</section>
			) : (
				<>
					<section class="page-hero" aria-label="Book this boat with skipper">
						<div class="page-hero-overlay"></div>
						<div class="page-hero-content">
							<p class="page-hero-label">PROFESSIONAL SKIPPER</p>
							<h1 class="page-hero-title">{boat.name}</h1>
							<p class="page-hero-subtitle">Book this boat with a professional skipper. Sit back and enjoy the cruise.</p>
							<a href="/contact" class="page-hero-cta">CONTACT US TO BOOK</a>
						</div>
					</section>

					<section class="book-page-section" aria-label="Book this boat">
						<div class="book-page-inner book-page-layout">
							<div class="flex flex-col gap-6">
								<div class="book-page-media">
									{boat.imageUrls && boat.imageUrls.length > 0 ? (
										<div class="book-page-gallery">
											<img src={boat.imageUrls[0]} alt={boat.name} width="600" height="400" class="book-page-main-image" />
											{boat.imageUrls.length > 1 && (
												<div class="book-page-thumbs">
													{boat.imageUrls.slice(0, 5).map((url, i) => (
														<img src={url} alt={`${boat.name} ${i + 1}`} width="80" height="56" class="book-page-thumb" />
													))}
												</div>
											)}
										</div>
									) : (
										<img src={boat.imageUrl || '/images/skipper-drive.png'} alt={boat.name} width="600" height="400" class="book-page-main-image" />
									)}
								</div>
								<div class="bg-[#f5f0e8] rounded-xl shadow-sm border border-gray-100 p-4">
									<h2 class="book-page-detail-title">{boat.name}</h2>
									{boat.modalName && <p class="book-page-modal-name">Speedboat "{boat.modalName}"</p>}
									{boat.lengthMeters && <p class="book-page-length">{boat.lengthMeters} m length</p>}
									<p class="book-page-pax">Max. {boat.maxPax} pax</p>
									{boat.description && <p class="book-page-description">{boat.description}</p>}
									<div class="book-page-includes">
										<p class="book-page-includes-heading">Includes:</p>
										<ul class="book-page-includes-list">
											{boat.includes.map((item) => <li>{item}</li>)}
											{boat.fuelExcludedText && <li class="book-page-excluded">{boat.fuelExcludedText}</li>}
										</ul>
									</div>
									<a href="/contact" class="book-page-cta">Contact to book</a>
								</div>
							</div>
							<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden w-full max-w-md">
								<div class="bg-neutral-700 text-white text-center py-3 px-4 rounded-t-xl">
									<h2 class="text-sm font-bold uppercase tracking-wide m-0">Book Online</h2>
								</div>
								<form id="book-online-form" class="p-4 space-y-4">
									<input type="hidden" name="boat" value={boat.id} />
									<div class="grid grid-cols-2 gap-4">
										<div class="flex flex-col gap-1">
											<label for="book-date" class="text-xs font-medium text-gray-600 flex items-center gap-1.5">
												<svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
												Date
											</label>
											<input type="date" id="book-date" name="date" required class="border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-700" />
										</div>
										<div class="flex flex-col gap-1">
											<label for="book-time" class="text-xs font-medium text-gray-600 flex items-center gap-1.5">
												<svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
												Time
											</label>
											<input type="time" id="book-time" name="time" value="09:00" class="border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-700" />
										</div>
									</div>
									{boat.skipperServices && boat.skipperServices.length > 0 ? (
										<>
											{boat.skipperServices.map((svc, i) => {
												const label = `${svc.name} - ${svc.durationHours} Hour${svc.durationHours !== 1 ? 's' : ''}`;
												const serviceValue = `${svc.name} - ${svc.durationHours} Hours`;
												return (
													<div class="flex items-center justify-between gap-2 py-2 border-b border-gray-100" data-service-index={i}>
														<div class="flex-1 min-w-0">
															<p class="text-sm font-medium text-gray-800">{label}</p>
															<p class="text-xs text-gray-600">+€{svc.price.toFixed(2)}</p>
														</div>
														<button type="button" class="view-desc-btn text-sm font-medium border border-teal-500 text-teal-600 px-3 py-1.5 rounded hover:bg-teal-50" data-view-description={svc.description ?? ''} data-view-label={label}>VIEW</button>
														<label class="group flex items-center gap-2 cursor-pointer shrink-0">
															<input type="radio" name="service" value={serviceValue} checked={i === 0} class="sr-only peer" />
															<span class="text-xs text-gray-600">Yes</span>
															<span class="relative inline-block w-10 h-5 rounded-full bg-gray-200 group-has-checked:bg-green-500 transition-colors">
																<span class="absolute top-1 left-1 w-3 h-3 rounded-full bg-white shadow transition-transform group-has-checked:translate-x-5"></span>
															</span>
														</label>
													</div>
												);
											})}
										</>
									) : (
										<p class="text-sm text-gray-500 py-2">No options available for this boat.</p>
									)}
									<div class="flex flex-col gap-1">
										<label for="book-promo" class="text-xs font-medium text-gray-600">Enter Promo Code</label>
										<input type="text" id="book-promo" name="promo" placeholder="Promo code" class="border border-gray-300 rounded-md px-3 py-2 text-sm placeholder-gray-400" />
									</div>
									<button type="submit" class="w-full bg-[#064250] hover:bg-[#0a5a6a] text-white font-bold text-sm uppercase py-3 px-4 rounded-lg flex items-center justify-center gap-2 transition-colors">
										<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
										Check Availability
									</button>
								</form>
							</div>
						</div>
					</section>
				</>
			)}
		</main>
		<div id="service-desc-modal" class="sk-view-modal" role="dialog" aria-modal="true" aria-labelledby="service-desc-modal-title" aria-hidden="true" hidden>
			<div class="sk-view-modal-backdrop" id="service-desc-modal-backdrop"></div>
			<div class="sk-view-modal-box">
				<div class="sk-view-modal-header">
					<h3 id="service-desc-modal-title" class="sk-view-modal-title">Route details</h3>
					<button type="button" class="sk-view-modal-close" id="service-desc-modal-close" aria-label="Close">&times;</button>
				</div>
				<div class="sk-view-modal-body" id="service-desc-modal-body"></div>
			</div>
		</div>
		<Footer />
		<script>
			const form = document.getElementById('book-online-form');
			form?.addEventListener('submit', (e) => {
				e.preventDefault();
				const f = e.currentTarget as HTMLFormElement;
				const boat = (f.querySelector('[name="boat"]') as HTMLInputElement)?.value?.trim() || '';
				const date = (f.querySelector('[name="date"]') as HTMLInputElement)?.value?.trim() || '';
				const time = (f.querySelector('[name="time"]') as HTMLInputElement)?.value?.trim() || '';
				const service = (f.querySelector('[name="service"]:checked') as HTMLInputElement)?.value?.trim() || '';
				const params = new URLSearchParams();
				if (boat) params.set('boat', boat);
				if (date) params.set('date', date);
				if (time) params.set('time', time);
				if (service) params.set('service', service);
				window.location.href = '/contact?' + params.toString();
			});

			const modal = document.getElementById('service-desc-modal');
			const modalBody = document.getElementById('service-desc-modal-body');
			const modalClose = document.getElementById('service-desc-modal-close');
			const modalBackdrop = document.getElementById('service-desc-modal-backdrop');
			document.querySelectorAll('.view-desc-btn').forEach((btn) => {
				btn.addEventListener('click', () => {
					const desc = (btn as HTMLElement).getAttribute('data-view-description') ?? '';
					const label = (btn as HTMLElement).getAttribute('data-view-label') ?? '';
					const titleEl = document.getElementById('service-desc-modal-title');
					if (titleEl) titleEl.textContent = label || 'Route details';
					if (modalBody) modalBody.textContent = desc || 'No description available.';
					if (modal) {
						modal.removeAttribute('hidden');
						modal.setAttribute('aria-hidden', 'false');
					}
				});
			});
			function closeModal() {
				if (modal) {
					modal.setAttribute('hidden', '');
					modal.setAttribute('aria-hidden', 'true');
				}
			}
			modalClose?.addEventListener('click', closeModal);
			modalBackdrop?.addEventListener('click', closeModal);
		</script>
	</body>
</html>

<style is:global>
	body.book-with-skipper-body {
		margin: 0;
		font-family: 'Inter', system-ui, sans-serif;
		background: #f5f5f5;
		color: #1a1a1a;
	}
</style>

<style>
	.book-with-skipper-page {
		min-height: 60vh;
		padding-bottom: 2rem;
		padding-top: 0;
	}

	.page-hero {
		position: relative;
		width: 100%;
		min-height: 50vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, #064250 0%, #0a5a6a 100%);
		overflow: hidden;
		padding-top: 5rem;
	}
	.page-hero-overlay {
		position: absolute;
		inset: 0;
		background: url('/images/skipper-drive.png') center/cover no-repeat;
		opacity: 0.25;
	}
	.page-hero-content {
		position: relative;
		z-index: 1;
		text-align: center;
		padding: 3rem 2rem;
		max-width: 36rem;
	}
	.page-hero-label {
		font-size: 0.75rem;
		letter-spacing: 0.2em;
		color: rgba(255, 255, 255, 0.9);
		margin: 0 0 0.5rem 0;
		text-transform: uppercase;
	}
	.page-hero-title {
		font-family: 'Cormorant Garamond', serif;
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		font-weight: 600;
		color: #fff;
		margin: 0 0 1rem 0;
		line-height: 1.2;
	}
	.page-hero-subtitle {
		font-size: 1.1rem;
		color: rgba(255, 255, 255, 0.9);
		margin: 0 0 1.5rem 0;
		line-height: 1.5;
	}
	.page-hero-cta {
		display: inline-block;
		padding: 0.9rem 2rem;
		background: #fff;
		color: #064250;
		text-decoration: none;
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		border-radius: 4px;
		transition: opacity 0.2s, transform 0.2s;
	}
	.page-hero-cta:hover {
		opacity: 0.95;
		transform: translateY(-1px);
	}

	.book-page-section {
		max-width: 1000px;
		margin: 0 auto;
		padding: 2rem 1.5rem;
	}
	.book-page-inner {
		background: #fff;
		border-radius: 12px;
		box-shadow: 0 2px 12px rgba(0,0,0,0.08);
		padding: 2rem;
	}
	.book-page-layout {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		align-items: start;
	}
	@media (max-width: 768px) {
		.book-page-layout {
			grid-template-columns: 1fr;
		}
	}
	.book-page-main-image {
		width: 100%;
		height: auto;
		border-radius: 8px;
		object-fit: cover;
		display: block;
	}
	.book-page-gallery {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}
	.book-page-thumbs {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}
	.book-page-thumb {
		width: 56px;
		height: 40px;
		object-fit: cover;
		border-radius: 4px;
		cursor: pointer;
		border: 2px solid transparent;
	}
	.book-page-thumb:hover {
		border-color: #064250;
	}
	.book-page-detail-title {
		margin: 0 0 0.25rem;
		font-size: 1.75rem;
		font-weight: 700;
		color: #064250;
		font-family: 'Cormorant Garamond', serif;
	}
	.book-page-modal-name {
		margin: 0 0 0.5rem;
		font-size: 1rem;
		color: #555;
	}
	.book-page-length {
		margin: 0 0 1rem;
		font-size: 0.9rem;
		color: #666;
	}
	.book-page-pax {
		margin: 0 0 1rem;
		font-size: 0.95rem;
		color: #444;
	}
	.book-page-description {
		margin: 0 0 1rem;
		font-size: 0.95rem;
		line-height: 1.6;
		color: #444;
	}
	.book-page-includes-heading {
		margin: 0 0 0.5rem;
		font-size: 1rem;
		font-weight: 600;
		color: #333;
	}
	.book-page-includes-list {
		margin: 0 0 1.5rem;
		padding-left: 1.25rem;
		line-height: 1.7;
		color: #555;
	}
	.book-page-includes-list li {
		margin: 0.2rem 0;
	}
	.book-page-excluded {
		list-style: none;
		padding-left: 0;
		margin-top: 0.5rem;
		color: #888;
		font-style: italic;
	}
	.book-page-cta {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: #064250;
		color: #fff;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		border-radius: 8px;
		transition: background 0.2s;
	}
	.book-page-cta:hover {
		background: #0a5a6a;
	}
	.book-page-title {
		margin: 0 0 0.75rem;
		font-size: 1.5rem;
		color: #333;
	}
	.book-page-text {
		margin: 0 0 1.5rem;
		color: #555;
	}

	.sk-view-modal {
		position: fixed;
		inset: 0;
		z-index: 1000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 1rem;
	}
	.sk-view-modal-backdrop {
		position: absolute;
		inset: 0;
		background: rgba(0, 0, 0, 0.5);
	}
	.sk-view-modal-box {
		position: relative;
		background: #fff;
		border-radius: 12px;
		box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
		max-width: 420px;
		width: 100%;
		max-height: 80vh;
		overflow: auto;
	}
	.sk-view-modal-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem 1.25rem;
		border-bottom: 1px solid #eee;
	}
	.sk-view-modal-title { margin: 0; font-size: 1.1rem; font-weight: 600; color: #333; }
	.sk-view-modal-close {
		background: none;
		border: none;
		font-size: 1.5rem;
		line-height: 1;
		color: #666;
		cursor: pointer;
		padding: 0.25rem;
	}
	.sk-view-modal-close:hover { color: #333; }
	.sk-view-modal-body {
		padding: 1.25rem;
		font-size: 0.95rem;
		line-height: 1.6;
		color: #555;
		white-space: pre-wrap;
	}
</style>
