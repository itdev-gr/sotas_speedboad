rules_version = '2';

// All Firestore access is via the server (Firebase Admin SDK in API routes).
// The Admin SDK bypasses these rules. These rules apply only to direct client
// access (e.g. from web/mobile SDK). Denying all keeps the DB secure.
service cloud.firestore {
  match /databases/{database}/documents {
    // Collections: contacts (contact form), bookings, locations, prices, scooters
    match /contacts/{id} {
      allow read, write: if false;
    }
    match /bookings/{id} {
      allow read, write: if false;
    }
    match /locations/{id} {
      allow read, write: if false;
    }
    match /prices/{id} {
      allow read, write: if false;
    }
    match /scooters/{id} {
      allow read, write: if false;
    }
    match /boats/{id} {
      allow read, write: if false;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
